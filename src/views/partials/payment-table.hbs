        <table class="table table-striped table-light">
            <thead>
                <tr>
                    <th class="align-middle" >Fecha</th>
                    <th class="align-middle" >Valor Cancelado</th>
                    <th class="align-middle" >Valor pendiente</th>
                    <th class="align-middle" >Motivo de Cancelación</th>
                    {{#if allowDelete}}
                    <th class="align-middle" >Acciones</th>
                    {{/if}}
                </tr>
            </thead>
            <tbody>
                {{#each payments}}
                <tr>
                    <td class="align-middle text-center"  class="text-uppercase text-center">{{formatTime payment_date}}</td>
                    <td class="align-middle text-center" >{{formatCurrency paid_amount}}</td>
                    <td class="align-middle text-center" >{{formatCurrency pending_amount}}</td>
                    <td class="align-middle text-center" >{{description}}</td>
                    {{#if ../allowDelete}}
                    <td class="align-middle text-center">
                        <a class="mx-1" style="color:red" href="/admin/customers/payments/delete/{{../userId}}/{{this.id}}" onclick="return confirm('¿Estás seguro de que quieres eliminar este registro?')" >Eliminar</a>
                    </td>
                    {{/if}}
                </tr>
                {{/each}}
            </tbody>
        </table>