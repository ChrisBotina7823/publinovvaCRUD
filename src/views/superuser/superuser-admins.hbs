<div class="container text-center">
    <a href="/superuser/admins/add" class="btn btn-primary mx-auto my-4">
        Añadir un Administrador
    </a>
</div>

<div class="container col-md-10" style="height:70vh;overflow-y:scroll;">

    <table class="table table-striped table-light">
    <thead style="position: sticky; top: 0;">
        <tr>
            <th class="align-middle">Email</th>
            <th class="align-middle">Nombre</th>
            <th class="align-middle">Código</th>
            <th class="align-middle">Estado de pago</th>
            <th class="align-middle">Pagos</th>
            <th class="align-middle">Acciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each admins}}
        <tr>
            <td class="align-middle text-center" class="text-uppercase text-center">{{email}}</td>
            <td class="align-middle text-center">{{name}}</td>
            <td class="align-middle text-center">{{id}}</td>
            <td class="align-middle text-center" style="
                {{#if pending_payment}}
                color: rgb(163, 38, 38)
                {{else}}
                color: black
                {{/if}}

            ">
            <p class="my-0" style="display: block;">{{timeago last_pay}}</p>
            <p class="my-0" style="font-size: 1.5vh">{{formatDate last_pay}}</p>
            </td>
            <td class="column align-middle text-center">
                <a class="mx-1" style="color:green; display:block" href="/admin/pay/{{id}}/1">Registrar Pago</a>
                <a class="mx-1" style="color:red; display:block" href="/admin/pay/{{id}}/0">Anular Pago</a>
            </td>
            <td class="column align-middle text-center">
                <a class="mx-1" style="color:blue; display:block" href="/admin/edit/{{id}}">Editar</a>
                <a class="mx-1" style="color:gray; display:block" href="/admin/payments/{{id}}">Ver pagos</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>
