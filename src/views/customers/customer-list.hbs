<div class="container-fluid col-md-10" style="overflow: auto;">
    <table class="table table-striped table-light">
        <thead>
            <tr>
                <th>Status</th>
                <th>Full Name</th>
                <th>Document</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Uploaded Files</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each customers}}
            <tr>
                <td class="text-uppercase">{{status}}</td>
                <td>{{fullname}}</td>
                <td>{{document}}</td>
                <td>{{phone}}</td>
                <td>{{email}}</td>
                <td>
                    {{#if files}}
                    <ul>
                        {{#each files}}
                        <li><a href="https://drive.google.com/file/d/{{id}}/view" target="_blank">{{name}}</a></li>
                        {{/each}}
                    </ul>
                    {{else}}
                    You do not have uploaded files yet
                    {{/if}}
                </td>
                <td>{{timeago created_at}}</td>
                <td class="text-center">
                    <a class="mx-1" style="color:#39439a" href="/admin/customers/edit/{{id}}">Edit</a>
                    <a class="mx-1" style="color:red" href="/admin/customers/delete/{{id}}" onclick="return confirm('¿Estás seguro de que quieres eliminar este elemento?')" >Delete</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>



<div class="mt-8 text-center">
    <a href="/admin/customers/add" class="m-8 btn btn-success">
        Add a Customer
    </a>
</div>

