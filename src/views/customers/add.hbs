<div class="container-fluid pt-2 pb-2" style="height:85vh;overflow-y:scroll;">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form id="form" action="/admin/customers/add" method="POST" enctype="multipart/form-data">

                        <div class="form-group">
                            <p class="text-left">Nombre Completo</p>
                            <input type="text" name="fullname" class="form-control" placeholder="Nombre Completo" autofocus>
                        </div>
                        <div class="form-group">
                            <p class="text-left">Documento</p>
                            <input type="text" name="document" class="form-control" placeholder="Documento" required>
                        </div>
                        <div class="form-group">
                            <p class="text-left">Contraseña</p>
                            <input type="password" name="password" class="form-control" placeholder="Contraseña" required>
                        </div>
                        <div class="form-group">
                            <p class="text-left">Correo Electrónico</p>
                            <input type="email" name="email" class="form-control" placeholder="Correo Electrónico" required>
                        </div>
                        <div class="form-group">
                            <p class="text-left">Teléfono</p>
                            <input type="phone" name="phone" class="form-control" placeholder="Teléfono" required>
                        </div>

                        <div class="form-group">
                            <p class="text-left">Estado</p>
                            <input type="text" name="status" class="form-control" placeholder="Estado" required>
                        </div>

                        <div class="form-group file-upload-wrapper">
                            <p class="text-left">Subir Archivos <span class="text-muted"> (Tamaño máximo: {{ size }} MB)</span></p>
                            <input id="fileInput" type="file" style="height:3rem" name="files" class="form-control" multiple>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col">
                                    <button class="btn btn-primary btn-block">
                                        Añadir
                                    </button>
                                </div>
                                <div class="col">
                                    <a href="/admin/customers/" class="btn btn-danger btn-block">
                                        Cancelar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
  const MAX_SIZE = {{size}} * 1e6;
  const fileInput = document.querySelector('#fileInput');
  fileInput.addEventListener('change', (event) => {
    const files = fileInput.files
    let size = 0
    for(let file of files) {
        size += file.size
    }   
    if (size > MAX_SIZE) {
      event.preventDefault();
      alert(`The maximum file size is ${MAX_SIZE/1e6} MB`)
      fileInput.value = ''
    }
  });
</script>